
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    List<AracIhaleSistemi.UI.ViewModels.UyeVM> uyeler = ViewBag.uyeler;
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<div class="col">
    <div class="card">
        <div class="card-body">
            <h6 class="card-title">Kullanıcı Tanımalama/Listeleme</h6>
            <h5 class="card-title"></h5>
            <p class="card-text">Kriterler</p>
        </div>

        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Kullanıcı Listesi</h6>
                        <h5 class="card-title"></h5>
                    </div>

                    <table class="table table-hover" ">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Ad Soyad</th>
                                <th>Email</th>
                                <th>Telefon</th>
                                <th>Aktif Mi?</th>
                                <th>Rolü</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="tbody">
                            @foreach (var item in uyeler)
                            {
                                <tr>
                                    <td>@item.ID</td>
                                    <td>@item.AdSoyad</td>
                                    <td>@item.Email</td>
                                    <td>@item.Telefon</td>
                                    <td><input type="checkbox" disabled value="@item.AktifMi" /></td>
                                    <td>@item.RolAdi</td>
                                    <td>
                                        <a role="button" href="@Url.Action("Update",item)" class="btn btn-primary">Güncelle</a>
                                        <button type="button" id="btnSil" class="btn btn-danger" data-toggle="modal" data-id="@item.ID" data-target="#silModal">Sil</button>
                                        <div class="modal fade" id="silModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <form method="post" id="formId" action="Delete?id=@item.ID">
                                                <div class="modal-dialog" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="exampleModalLabel">Sil</h5>
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <input type="hidden" name="bookId" id="Id" value="" />
                                                            Kullanıcı silinsin mi?
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                                                            <button type="submit" class="btn btn-danger">Sil</button>/>

                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </td>

                                </tr>
                                
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="card-body">
            <br />
            <a class="btn btn-success" href="Add" role="button">Yeni</a>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {

    });
</script>