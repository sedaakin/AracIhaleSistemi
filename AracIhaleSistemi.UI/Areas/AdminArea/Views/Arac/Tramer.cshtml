@using AracIhaleSistemi.UI.ViewModels
@{
    ViewData["Title"] = "Tramer";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AracTramerAddVM

<div class="row">
    <div class="col">
        <div class="card">

            <div class="card-body">
                <h6 class="card-title">Tramer Bilgileri</h6>
                <h5 class="card-title"></h5>
            </div>

            @*Tramer Tutar*@
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Toplam Tramer Tutarı</label>
                        <div class="col-sm-10">
                            <div class="form-check form-check-inline col-sm-8 ">
                                <input type="text" class="form-control">
                            </div>
                        </div>
                    </div>
                </li>
            </ul>


            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <div class="form-group row" style="font-weight:bold">
                        <label class="col-sm-5 col-form-label">Tramer Durum</label>
                        <label class="col-sm-2 col-form-label">Orjinal</label>
                        <label class="col-sm-2 col-form-label">Boyalı</label>
                        <label class="col-sm-2 col-form-label">Değişmiş</label>

                    </div>
                </li>
            </ul>

            @foreach (var item in ViewBag.cmbTramer)
            {
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label" asp-for="TramerID">@item.TramerAdi</label>
                            @foreach (var deger in ViewBag.cmbTramerDurum)
                            {
                                <div class="form-check form-check-inline col-sm-2 ">
                                    <input type="radio" value="@deger.DurumID" name="@item.TramerID" style="margin-left:25px" asp-for="DurumID" />
                                </div>
                            }
                            <br />
                        </div>
                    </li>
                </ul>
            }
        </div>
    </div>
</div>
