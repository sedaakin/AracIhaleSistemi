
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@model AracIhaleSistemi.UI.ViewModels.PaketDetayAddVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<form method="post">

    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="">Parametre</label><br />
        </div>
        <div class="form-group col-md-6">
            <input class="form-check-input" type="radio" value="0" name="parametre" id="parametre1"  asp-for="Parametre" />
            <label class="form-check-label" for="parametre1">
                Aylık araç sayısı
            </label><br />
        </div>
        <div class="form-group col-md-6">
            <input class="form-check-input" type="radio" value="1" name="parametre" id="parametre2"  asp-for="Parametre" />
            <label class="form-check-label" for="parametre2">
                Komisyon Tutarı
            </label>
        </div>
</div>
        <div class="form-row">
            <label for="inputPassword4">Paket Tipi</label>
            <select asp-for="PaketTipID" class="form-control" id="tip"
                    asp-items="@(new SelectList(ViewBag.PaketTip ,"PaketTipID","PaketTipi"))">
                <option>Please select one</option>
            </select>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Tanımlama</label>
                <input type="text" class="form-control" asp-for="Tanimlama">
            </div>

        </div>

        <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
